generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            String                   @id @default(uuid())
  name          String
  type          TransactionType
  amount        Decimal                  @db.Decimal(10, 2) // Até 10 digitos antes da virgula e até 2 digitos depois da vírgula.
  category      TransactionCategory
  paymentMethod TransactionPaymentMethod
  date          DateTime
  createdAt     DateTime                 @default(now()) //Irá mostrar a data e hora atual de quando o usuário fizer o registro
  updatedAt     DateTime                 @updatedAt
  userId       String                  
}

model Goal {
  id          String   @id @default(cuid())
  userId      String
  title       String
  amount      Float
  current     Float    @default(0)
  description String
  deadline    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Achievement {
  id        String   @id @default(cuid())
  userId    String
  goalId    String?
  title     String
  icon      String   // “star”, “trophy”, “medal”, etc.
  points    Int      @default(50)
  createdAt DateTime @default(now())
}

model UserProfile {
  id            String   @id @default(cuid())
  userId        String   @unique // Clerk ID

  xp            Int      @default(0)
  level         Int      @default(1)
  totalXp       Int      @default(0)
  lastLogin     DateTime @default(now())

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model UserXp {
  id        String   @id @default(cuid())
  userId    String   @unique
  xp        Int      @default(0)
  level     Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QuizQuestion {
  id        String   @id @default(cuid())
  question  String
  optionA   String
  optionB   String
  optionC   String
  correct   String   // "A" | "B" | "C"
  createdAt DateTime @default(now())
}

model QuizAnswer {
  id        String   @id @default(cuid())
  userId    String
  questionId String
  chosen    String   // <-- ADICIONE ESTA LINHA
  correct   Boolean
  createdAt DateTime @default(now())
}




enum TransactionType {
  DEPOSIT
  EXPENSE
  INVESTMENT
}

enum TransactionCategory {
  HOUSING
  TRANSPORTATION
  FOOD
  ENTERTAINMENT
  HEALTH
  UTILITY
  SALARY
  EDUCATION
  OTHER
}

enum TransactionPaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  BANK_TRANSFER
  BANK_SLIP
  CASH
  PIX
  OTHER
}
